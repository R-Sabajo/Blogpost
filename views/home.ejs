<%- include('partials/header') -%>
<div class="titleBox">
<h1 class="title">Start writing here</h1>
<p><%= startingContent %></p>
</div>

<h2 class="subtitle">Recent posts</h2>

<div class="postsBox">
<% posts.forEach((post) => { %>
  <div class="post">
    <a href="/posts/<%= post._id %>">
      <img class="postBackground" src="/img/postBackground2.jpg" alt="Post background image">
    
    <h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
    <p class="authorDate">Written by <%= post.author %> </p>
<% if (post.body.length > 100) {  %>
    <div class="postBody"><%= post.body.substring(0, 100) + ' ...' %></div>
    
<% }  else { %>
  <div class="postBody"> <%= post.body %> </div> 
    
<%  }  %>
    
  
  </div>
</a>
<% }) %>
</div>

<div>
  <a  class="btn btn-primary btn-lg compose" href="/compose">Compose</a>
</div>


<%- include('partials/footer') -%> 

